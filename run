!#/bin/bash

docker compose -f .\src\main\docker\postgresql.yml up --build --detach

docker compose -f .\src\main\docker\elasticsearch.yml up --build --detach

docker run -p 8080:8080 --rm -v .:/app -w /app eclipse-temurin:17.0.10_7-jdk-jammy bash -c "apt-get update && apt-get install -y curl && curl -fsSL https://deb.nodesource.com/setup_16.x | bash - && apt-get install -y nodejs && node -v && npm -v && npm install && npm run webapp:build:dev && ./mvnw package -DskipTests -Pdev && java -jar target/books-library-0.0.1-SNAPSHOT.jar"
docker run -p 8080:8080 --rm -v .:/app -w /app eclipse-temurin:17.0.10_7-jdk-jammy bash -c "apt-get update && apt-get install -y curl && curl -fsSL https://deb.nodesource.com/setup_16.x | bash - && apt-get install -y nodejs && node -v && npm -v && npm install && npm run webapp:build:dev && ./mvnw package -DskipTests -Pprod && java -jar target/books-library-0.0.1-SNAPSHOT.jar"
